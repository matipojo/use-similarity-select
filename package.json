{
  "name": "use-similarity-select",
  "description": "A React hook that allows you to use similarity search in a react-select component",
  "license": "MIT",
  "private": false,
  "version": "0.0.1",
  "type": "module",
  "main": "dist/react-select/main.js",
  "types": "dist/react-select/main.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build:lib": "tsc --p ./tsconfig.lib.json && vite build -c ./vite.config.lib.ts",
    "build:demo": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "prepublishOnly": "npm run build:lib"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-select": "^5.8.0"
